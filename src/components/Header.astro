---
import '../styles/header.css';
import Logo from './ui/Logo.astro';
import Navigation from './ui/Navigation.astro';
import CTAButton from './ui/CTAButton.astro';
import { PRIMARY_CTA } from '../constants';
---

<header class="navbar-container">
  <nav class="navbar" role="navigation" aria-label="Navegación principal">
    
    <!-- Logo Component -->
    <div class="logo-container">
      <Logo size="md" showBrandText={false} />
    </div>

    <!-- Navegación y CTA -->
    <div class="nav-section">
      
      <!-- Navigation Component con CTA button para móvil -->
      <Navigation 
        className="nav-links" 
        ctaButton={{
          label: PRIMARY_CTA.label,
          href: PRIMARY_CTA.href,
          ariaLabel: PRIMARY_CTA.ariaLabel
        }}
      />

      <!-- CTA Button Component - Solo visible en desktop -->
      <CTAButton 
        href={PRIMARY_CTA.href}
        variant="primary"
        size="md"
        ariaLabel={PRIMARY_CTA.ariaLabel}
        className="cta-button hidden md:inline-flex"
      >
        {PRIMARY_CTA.label}
      </CTAButton>
      
    </div>
  </nav>
</header>



