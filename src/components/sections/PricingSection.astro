---
import { obtenerPlanes } from '../../utils/firebase';
import PricingCards from './PricingCards.astro';

let planes: any[] = [];
let error = false;

try {
  planes = await obtenerPlanes();
} catch (e) {
  console.error('Error cargando planes:', e);
  error = true;
}
---

<section class="relative py-20 lg:py-32 overflow-hidden" id="planes" style="background-color: #0e0e10;">
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0 bg-center pricing-pattern"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6" style="color: #fefefe;">
        Planes que Crecen
        <span class="block" style="color: #fe6b24;">con tu Gimnasio</span>
      </h2>
      <p class="text-xl max-w-3xl mx-auto" style="color: #d4d4d4;">
        Funcionalidades MVP diseñadas para gimnasios que quieren profesionalizar su operación desde el día uno.
      </p>
    </div>

    {error ? (
      <div class="text-center py-12">
        <p style="color: #fe6b24;">Error al cargar los planes. Por favor, intenta de nuevo.</p>
      </div>
    ) : planes.length === 0 ? (
      <div class="text-center py-12">
        <p style="color: #d4d4d4;">No hay planes disponibles en este momento.</p>
      </div>
    ) : (
      <PricingCards planes={planes} />
    )}
  </div>
</section>

<style>
  .pricing-pattern {
    background-image: url('data:image/svg+xml,<svg width="80" height="80" viewBox="0 0 80 80" xmlns="http://www.w3.org/2000/svg"><g fill="%23e04a36" fill-opacity="0.08"><path d="M40 40L20 20h40v40z"/></g></svg>');
  }
  
  .pricing-card {
    position: relative;
    background: #1a1a1a;
    border-radius: 1.5rem;
    border: 2px solid #2a2a2a;
    padding: 2rem 1.5rem;
    transition: all 0.4s ease;
    overflow: hidden;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.4);
    min-height: 600px;
    display: flex;
    flex-direction: column;
  }
  
  .pricing-card-featured {
    border: 2px solid #fe6b24;
    transform: scale(1.02);
    background: #1a1a1a;
    box-shadow: 0 8px 32px rgba(254, 107, 36, 0.25);
    position: relative;
  }
  
  .pricing-card:hover {
    transform: translateY(-8px);
    border-color: rgba(254, 107, 36, 0.5);
    box-shadow: 0 12px 40px rgba(254, 107, 36, 0.2);
  }
  
  .pricing-card-featured:hover {
    transform: scale(1.02) translateY(-8px);
    box-shadow: 0 16px 48px rgba(254, 107, 36, 0.3);
  }
  
  .featured-badge {
    position: absolute;
    top: 1rem;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(135deg, #fe6b24, #e04a36);
    color: #ffffff;
    padding: 0.5rem 1.25rem;
    border-radius: 2rem;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    box-shadow: 0 4px 16px rgba(254, 107, 36, 0.5);
  }
  
  .plan-badge {
    display: inline-block;
    padding: 0.4rem 1.2rem;
    border-radius: 2rem;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    border: 2px solid;
  }
  
  .plan-price {
    display: flex;
    align-items: baseline;
    justify-content: center;
    margin-bottom: 0.5rem;
  }
  
  .price-currency {
    font-size: 1.5rem;
    font-weight: 600;
    margin-right: 0.25rem;
  }
  
  .price-amount {
    font-size: 4.5rem;
    font-weight: 900;
    line-height: 1;
    letter-spacing: -0.02em;
  }
  
  .price-period {
    font-size: 1.125rem;
    margin-left: 0.5rem;
    font-weight: 500;
  }
  
  .pricing-features {
    margin: 2.5rem 0;
    flex-grow: 1;
  }
  
  .feature-item {
    display: flex;
    align-items: flex-start;
    color: #d4d4d4;
    font-size: 0.9375rem;
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  
  .feature-check {
    width: 1.5rem;
    height: 1.5rem;
    margin-right: 0.875rem;
    flex-shrink: 0;
    margin-top: 0.125rem;
  }
  
  .cta-basic, .cta-enterprise {
    width: 100%;
    padding: 1rem 1.5rem;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    border: 2px solid #2a2a2a;
    background: #0e0e10;
    color: #fefefe;
    cursor: pointer;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }
  
  .cta-basic:hover, .cta-enterprise:hover {
    border-color: #fe6b24;
    background: rgba(254, 107, 36, 0.1);
    color: #fe6b24;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(254, 107, 36, 0.2);
  }
  
  .cta-pro {
    width: 100%;
    padding: 1rem 1.5rem;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 1rem;
    background: linear-gradient(135deg, #fe6b24, #e04a36);
    color: #ffffff;
    border: none;
    transition: all 0.3s ease;
    box-shadow: 0 6px 20px rgba(254, 107, 36, 0.4);
    cursor: pointer;
  }
  
  .cta-pro:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 28px rgba(254, 107, 36, 0.5);
    background: linear-gradient(135deg, #ff7a35, #f05547);
  }
  
  .pricing-cta {
    margin-top: auto;
    padding-top: 1.5rem;
  }
  
  .pricing-header {
    text-align: center;
    margin-bottom: 1rem;
  }
  
  .plan-description {
    text-align: center;
    font-size: 0.9375rem;
    color: #a3a3a3;
    margin-top: 0.5rem;
    min-height: 2.5rem;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  gsap.registerPlugin(ScrollTrigger);
  
  document.addEventListener('DOMContentLoaded', () => {
    gsap.fromTo(".pricing-card", {
      y: 40,
      opacity: 0
    }, {
      y: 0,
      opacity: 1,
      duration: 0.6,
      ease: "power2.out",
      stagger: 0.15,
      scrollTrigger: {
        trigger: ".pricing-card",
        start: "top 85%",
        toggleActions: "play none none reverse"
      }
    });

    gsap.fromTo(".pricing-card-featured", {
      scale: 0.95
    }, {
      scale: 1.02,
      duration: 0.6,
      ease: "power2.out",
      delay: 0.3,
      scrollTrigger: {
        trigger: ".pricing-card-featured",
        start: "top 85%",
        toggleActions: "play none none reverse"
      }
    });

    gsap.fromTo(".feature-check", {
      scale: 0,
      opacity: 0
    }, {
      scale: 1,
      opacity: 1,
      duration: 0.4,
      ease: "back.out(1.7)",
      stagger: 0.05,
      scrollTrigger: {
        trigger: ".pricing-features",
        start: "top 90%",
        toggleActions: "play none none reverse"
      }
    });

    document.querySelectorAll('.cta-basic, .cta-pro, .cta-enterprise').forEach(button => {
      button.addEventListener('mouseenter', () => {
        gsap.to(button, {
          scale: 1.02,
          duration: 0.2,
          ease: "power2.out"
        });
      });
      
      button.addEventListener('mouseleave', () => {
        gsap.to(button, {
          scale: 1,
          duration: 0.2,
          ease: "power2.out"
        });
      });
    });
  });
</script>
