---
const { planes } = Astro.props;
---

<style>
  .pricing-card {
    position: relative;
    background: #1a1a1a;
    border-radius: 1.5rem;
    border: 2px solid #2a2a2a;
    padding: 2rem 1.5rem;
    transition: all 0.4s ease;
    overflow: hidden;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.4);
    min-height: 600px;
    display: flex;
    flex-direction: column;
  }
  
  .pricing-card-featured {
    border: 2px solid #fe6b24;
    transform: scale(1.02);
    background: #1a1a1a;
    box-shadow: 0 8px 32px rgba(254, 107, 36, 0.25);
    position: relative;
  }
  
  .pricing-card:hover {
    transform: translateY(-8px);
    border-color: rgba(254, 107, 36, 0.5);
    box-shadow: 0 12px 40px rgba(254, 107, 36, 0.2);
  }
  
  .pricing-card-featured:hover {
    transform: scale(1.02) translateY(-8px);
    box-shadow: 0 16px 48px rgba(254, 107, 36, 0.3);
  }
  
  .featured-badge {
    position: absolute;
    top: 1rem;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(135deg, #fe6b24, #e04a36);
    color: #ffffff;
    padding: 0.5rem 1.25rem;
    border-radius: 2rem;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    box-shadow: 0 4px 16px rgba(254, 107, 36, 0.5);
  }
  
  .plan-badge {
    display: inline-block;
    padding: 0.4rem 1.2rem;
    border-radius: 2rem;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    border: 2px solid;
  }
  
  .plan-price {
    display: flex;
    align-items: baseline;
    justify-content: center;
    margin-bottom: 0.5rem;
  }
  
  .price-currency {
    font-size: 1.5rem;
    font-weight: 600;
    margin-right: 0.25rem;
  }
  
  .price-amount {
    font-size: 4.5rem;
    font-weight: 900;
    line-height: 1;
    letter-spacing: -0.02em;
  }
  
  .price-period {
    font-size: 1.125rem;
    margin-left: 0.5rem;
    font-weight: 500;
  }
  
  .pricing-features {
    margin: 2.5rem 0;
    flex-grow: 1;
  }
  
  .feature-item {
    display: flex;
    align-items: flex-start;
    color: #d4d4d4;
    font-size: 0.9375rem;
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  
  .feature-check {
    width: 1.5rem;
    height: 1.5rem;
    margin-right: 0.875rem;
    flex-shrink: 0;
    margin-top: 0.125rem;
  }

  .cta-basic, .cta-enterprise {
    width: 100%;
    padding: 1rem 1.5rem;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    border: 2px solid #2a2a2a;
    background: #0e0e10;
    color: #fefefe;
    cursor: pointer;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }
  
  .cta-basic:hover, .cta-enterprise:hover {
    border-color: #fe6b24;
    background: rgba(254, 107, 36, 0.1);
    color: #fe6b24;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(254, 107, 36, 0.2);
  }
  
  .cta-pro {
    width: 100%;
    padding: 1rem 1.5rem;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 1rem;
    background: linear-gradient(135deg, #fe6b24, #e04a36);
    color: #ffffff;
    border: none;
    transition: all 0.3s ease;
    box-shadow: 0 6px 20px rgba(254, 107, 36, 0.4);
    cursor: pointer;
  }
  
  .cta-pro:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 28px rgba(254, 107, 36, 0.5);
    background: linear-gradient(135deg, #ff7a35, #f05547);
  }
  
  .pricing-cta {
    margin-top: auto;
    padding-top: 1.5rem;
  }
  
  .pricing-header {
    text-align: center;
    margin-bottom: 1rem;
  }
  
  .plan-description {
    text-align: center;
    font-size: 0.9375rem;
    color: #a3a3a3;
    margin-top: 0.5rem;
    min-height: 2.5rem;
  }
</style>

<div id="planes-grid" class="grid lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
  {planes.map((plan: any) => {
    const isFeatured = plan.name.toLowerCase().includes('pro') || plan.name.toLowerCase().includes('premium');
    const isEnterprise = plan.name.toLowerCase().includes('enterprise');
    const ctaClass = isEnterprise ? 'cta-enterprise' : (isFeatured ? 'cta-pro' : 'cta-basic');
    const ctaText = 'Empezar ahora';
    
    return (
      <div class={`pricing-card ${isFeatured ? 'pricing-card-featured' : ''} group`}>
        {isFeatured && <div class="featured-badge">MÃ¡s Popular</div>}
        
        <div class="pricing-header" style={`margin-top: ${isFeatured ? '2.5rem' : '0'};`}>
          <div 
            class="plan-badge" 
            style={`background-color: transparent; border-color: ${isFeatured ? '#fe6b24' : '#3a3a3a'}; color: ${isFeatured ? '#fe6b24' : '#d4d4d4'};`}
          >
            {plan.name}
          </div>
          <div class="plan-price">
            <span class="price-currency" style="color: #a3a3a3;">$</span>
            <span class="price-amount" style="color: #ffffff;">{Math.floor(plan.price)}</span>
            <span class="price-period" style="color: #a3a3a3;">/mes</span>
          </div>
          <p class="plan-description">{plan.description}</p>
        </div>
        
        <div class="pricing-features">
          <ul>
            {plan.features.map((feature: string) => (
              <li class="feature-item">
                <svg class="feature-check" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M5 13L9 17L19 7" stroke="#fe6b24" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span>{feature}</span>
              </li>
            ))}
          </ul>
        </div>
        
        <div class="pricing-cta">
          <button 
            class={ctaClass} 
            onclick={`window.openRegisterModal('${plan.id}', '${plan.name}')`}
          >
            {ctaText}
          </button>
        </div>
      </div>
    );
  })}
</div>


