---
import ModalManager from './ModalManager.tsx';
---

<ModalManager client:load />

<style is:global>
  .modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(4px);
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .modal-container {
    width: 100%;
    max-width: 700px;
    max-height: 90vh;
    overflow-y: auto;
  }

  .modal-content {
    background: #1a1a1a;
    border-radius: 1.5rem;
    border: 2px solid #2a2a2a;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  }

  .modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 2rem;
    border-bottom: 1px solid #2a2a2a;
  }

  .modal-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #fefefe;
  }

  .modal-title span {
    color: #fe6b24;
  }

  .close-button {
    background: transparent;
    border: none;
    color: #a3a3a3;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0.5rem;
    border-radius: 0.5rem;
  }

  .close-button:hover {
    color: #fe6b24;
    background: rgba(254, 107, 36, 0.1);
  }

  .modal-form {
    padding: 2rem;
  }

  .form-section {
    margin-bottom: 2rem;
  }

  .section-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #fefefe;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #2a2a2a;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  @media (max-width: 640px) {
    .form-row {
      grid-template-columns: 1fr;
    }
  }

  .form-group {
    margin-bottom: 1rem;
  }

  .form-group label {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    color: #d4d4d4;
    margin-bottom: 0.5rem;
  }

  .form-input {
    width: 100%;
    padding: 0.75rem 1rem;
    border-radius: 0.75rem;
    border: 1px solid #2a2a2a;
    background: #0e0e10;
    color: #fefefe;
    font-size: 0.9375rem;
    transition: all 0.3s ease;
  }

  .form-input:focus {
    outline: none;
    border-color: #fe6b24;
    box-shadow: 0 0 0 3px rgba(254, 107, 36, 0.1);
  }

  .form-input::placeholder {
    color: #737373;
  }

  .submit-button {
    width: 100%;
    padding: 1rem 1.5rem;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 1rem;
    background: linear-gradient(135deg, #fe6b24, #e04a36);
    color: #ffffff;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 6px 20px rgba(254, 107, 36, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .submit-button:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 8px 28px rgba(254, 107, 36, 0.5);
    background: linear-gradient(135deg, #ff7a35, #f05547);
  }

  .submit-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }
  .details-scrollbar {
    scrollbar-width: thin;
    scrollbar-color: rgba(255,255,255,0.12) transparent;
  }
  .details-scrollbar::-webkit-scrollbar {
    width: 10px;
    height: 10px;
  }
  .details-scrollbar::-webkit-scrollbar-track {
    background: transparent;
  }
  .details-scrollbar::-webkit-scrollbar-thumb {
    background-color: rgba(255,255,255,0.10);
    border-radius: 9999px;
    border: 2px solid rgba(15,15,16,0.6);
  }
  .details-scrollbar::-webkit-scrollbar-thumb:hover {
    background-color: rgba(255,255,255,0.16);
  }
  .details-scrollbar::-webkit-scrollbar-corner {
    background: transparent;
  }

  .modal-container {
    width: 100%;
    max-width: 700px;
    max-height: 90vh;
    overflow-y: auto;
    scrollbar-width: thin;
    scrollbar-color: rgba(255,255,255,0.12) transparent;
  }
  .modal-container::-webkit-scrollbar {
    width: 10px;
    height: 10px;
  }
  .modal-container::-webkit-scrollbar-track {
    background: transparent;
  }
  .modal-container::-webkit-scrollbar-thumb {
    background-color: rgba(255,255,255,0.10);
    border-radius: 9999px;
    border: 2px solid rgba(15,15,16,0.6);
  }
  .modal-container::-webkit-scrollbar-thumb:hover {
    background-color: rgba(255,255,255,0.16);
  }
  .modal-container::-webkit-scrollbar-corner {
    background: transparent;
  }
</style>
