<style>
  .footer-pattern {
    background-image: url('data:image/svg+xml,<svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23e04a36" fill-opacity="0.1"><circle cx="30" cy="30" r="1"/></g></g></svg>');
  }
  
  .footer-link {
    color: #a3a3a3;
    transition: all 0.3s ease;
    position: relative;
    display: inline-block;
  }
  
  .footer-link:hover {
    color: #e04a36;
    transform: translateX(4px);
  }
  
  .footer-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background-color: #e04a36;
    transition: width 0.3s ease;
  }
  
  .footer-link:hover::after {
    width: 100%;
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background-color: #262626;
    color: #a3a3a3;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .social-link::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background: linear-gradient(45deg, #e04a36, #fe6b24);
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .social-link:hover::before {
    opacity: 1;
  }
  
  .social-link:hover {
    color: #0a0a0a;
    transform: translateY(-2px) scale(1.1);
    box-shadow: 0 8px 20px rgba(239, 68, 68, 0.3);
  }
  
  .social-link svg {
    position: relative;
    z-index: 1;
  }
  
  .newsletter-input {
    padding: 0.875rem 1rem;
    border-radius: 0.75rem;
    border: 1px solid #262626;
    background-color: #141414;
    color: #fefefe;
    transition: all 0.3s ease;
  }
  
  .newsletter-input:focus {
    outline: none;
    border-color: #e04a36;
    box-shadow: 0 0 0 3px rgba(224, 74, 54, 0.1);
  }
  
  .newsletter-input::placeholder {
    color: #a3a3a3;
  }
  
  .newsletter-button {
    padding: 0.875rem 1.5rem;
    background: linear-gradient(90deg, #e04a36, #fe6b24);
    color: #fefefe;
    font-weight: 600;
    border: none;
    border-radius: 0.75rem;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
  }
  
  .newsletter-button:hover {
    background: linear-gradient(90deg, #fe6b24, #e04a36);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(224, 74, 54, 0.4);
  }
  
  .demo-button {
    padding: 0.875rem 1.5rem;
    border: 2px solid rgba(254, 107, 36, 0.3);
    background: rgba(254, 107, 36, 0.1);
    color: #fe6b24;
    font-weight: 600;
    border-radius: 0.75rem;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
    text-decoration: none;
    backdrop-filter: blur(4px);
  }
  
  .demo-button:hover {
    border-color: #fe6b24;
    background: rgba(254, 107, 36, 0.2);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(254, 107, 36, 0.3);
    color: #e04a36;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  gsap.registerPlugin(ScrollTrigger);
  
  document.addEventListener('DOMContentLoaded', () => {
    

    gsap.fromTo("footer > div > div", {
      y: 60,
      opacity: 0
    }, {
      y: 0,
      opacity: 1,
      duration: 0.8,
      ease: "power3.out",
      stagger: 0.1,
      scrollTrigger: {
        trigger: "footer",
        start: "top 85%",
        toggleActions: "play none none reverse"
      }
    });

    // Función auxiliar para normalizar el tenant_name (igual que en el backend)
    function normalizeTenantName(tenantName: string): string {
      return tenantName
        .toLowerCase()
        .trim()
        .replace(/[^a-z0-9\s]/g, '') // Remover caracteres especiales excepto espacios
        .replace(/\s+/g, '-') // Reemplazar espacios con guiones
        .replace(/^-+|-+$/g, ''); // Remover guiones al inicio y final
    }

    // Preview del tenant_name en tiempo real
    const tenantNameInput = document.getElementById('tenant-name-input') as HTMLInputElement;
    const tenantPreview = document.getElementById('tenant-preview') as HTMLElement;

    tenantNameInput?.addEventListener('input', () => {
      const value = (tenantNameInput as HTMLInputElement).value;
      const normalized = normalizeTenantName(value);
      
      if (normalized) {
        tenantPreview.textContent = normalized;
        tenantPreview.style.color = '#fe6b24';
      } else {
        tenantPreview.textContent = 'mi-gimnasio';
        tenantPreview.style.color = '#a3a3a3';
      }
    });

    // Register form handling con API de register_request
    const registerForm = document.getElementById('register-form') as HTMLFormElement;
    const registerBtnText = document.getElementById('register-btn-text') as HTMLElement;
    const registerBtnLoading = document.getElementById('register-btn-loading') as HTMLElement;
    const registerArrow = document.getElementById('register-arrow') as HTMLElement;

    registerForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      if (registerForm && registerBtnText && registerBtnLoading && registerArrow) {
        const formData = new FormData(registerForm);
        const name = formData.get('name') as string;
        const email = formData.get('email') as string;
        const tenantName = formData.get('tenant_name') as string;
        
        // Validación básica del lado del cliente
        if (!name || name.trim().length < 2) {
          showMessage('Por favor ingresa tu nombre completo', 'error');
          return;
        }
        
        if (!email || !email.includes('@')) {
          showMessage('Por favor ingresa un email válido', 'error');
          return;
        }

        if (!tenantName || tenantName.trim().length < 2) {
          showMessage('Por favor ingresa el nombre de tu gimnasio', 'error');
          return;
        }

        // UI Loading
        registerBtnText.classList.add('hidden');
        registerBtnLoading.classList.remove('hidden');
        registerArrow.classList.add('hidden');
        
        try {
          // Llamada real a la API de register_request
          const response = await fetch('/api/register-request', {
            method: 'POST',
            body: formData
          });
          
          const result = await response.json();
          
          if (result.success) {
            // Éxito
            registerBtnText.innerHTML = '¡Solicitud Enviada!';
            registerBtnText.classList.remove('hidden');
            registerBtnLoading.classList.add('hidden');
            
            // Limpiar el formulario
            registerForm.reset();
            
            showMessage(result.message || '¡Gracias! Te contactaremos pronto para configurar tu gimnasio.', 'success');
            
            // Resetear botón después de unos segundos
            setTimeout(() => {
              registerBtnText.innerHTML = 'Solicitar Acceso Gratis';
              registerArrow.classList.remove('hidden');
            }, 4000);
            
          } else {
            throw new Error(result.message || 'Error al enviar solicitud');
          }
        } catch (error) {
          console.error('Register request error:', error);
          
          registerBtnText.innerHTML = 'Error - Intentar de nuevo';
          registerBtnText.classList.remove('hidden');
          registerBtnLoading.classList.add('hidden');
          registerArrow.classList.add('hidden');
          
          const errorMessage = error instanceof Error ? error.message : 'Error al procesar la solicitud';
          showMessage(errorMessage, 'error');
          
          // Resetear botón después de unos segundos
          setTimeout(() => {
            registerBtnText.innerHTML = 'Solicitar Acceso Gratis';
            registerArrow.classList.remove('hidden');
          }, 3000);
        }
      }
    });

    // Función para mostrar mensajes
    function showMessage(message: string, type: 'success' | 'error') {
      // Remover mensaje anterior si existe
      const existingMessage = document.querySelector('.newsletter-message');
      if (existingMessage) {
        existingMessage.remove();
      }

      // Crear nuevo mensaje
      const messageDiv = document.createElement('div');
      messageDiv.className = `newsletter-message fixed top-4 right-4 z-50 p-4 rounded-lg shadow-lg transition-all duration-300 ${
        type === 'success' 
          ? 'bg-green-500 text-white' 
          : 'bg-red-500 text-white'
      }`;
      messageDiv.innerHTML = `
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            ${type === 'success' 
              ? '<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />'
              : '<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />'
            }
          </svg>
          <span>${message}</span>
        </div>
      `;

      document.body.appendChild(messageDiv);

      // Animar entrada
      gsap.from(messageDiv, {
        x: 100,
        opacity: 0,
        duration: 0.3,
        ease: "power2.out"
      });

      // Remover automáticamente después de 5 segundos
      setTimeout(() => {
        gsap.to(messageDiv, {
          x: 100,
          opacity: 0,
          duration: 0.3,
          ease: "power2.in",
          onComplete: () => messageDiv.remove()
        });
      }, 5000);
    }

    // Hover animations para social links
    document.querySelectorAll('.social-link').forEach(link => {
      link.addEventListener('mouseenter', () => {
        gsap.to(link, {
          scale: 1.15,
          duration: 0.3,
          ease: "back.out(1.7)"
        });
      });
      
      link.addEventListener('mouseleave', () => {
        gsap.to(link, {
          scale: 1,
          duration: 0.3,
          ease: "power2.out"
        });
      });
    });
  });
</script>